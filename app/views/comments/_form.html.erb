<form class="form-horizontal">
    <%= form_for([@article, @article.comments.build]) do |f| %>
    <div class="form-group">
        <div class="col-lg-10">
            <%= f.label :commenter %><br>
            <%= f.text_field :commenter, class:"form-control" %>
        </div>
        <div class="col-lg-10">
            <%= f.label :body %><br>
            <%= f.text_area :body, class:"form-control", rows:"3", id:"textArea" %>
        </div>
        <div class="col-lg-10">
            <%= f.submit %>
        </div><%end %>
    </div>
</form>