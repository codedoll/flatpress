<h1>Web Dev Club</h1>
<%- if user_signed_in? %>
  <%= link_to 'New post', new_article_path, class: "btn btn-primary" %> 
<% end %>


<div>
  <% @articles.each do |article| %>
    <%= link_to article.title, article_path(article)%><br>
      <%= article.username %><br>
    <%= article.created_at.strftime("%m/%d/%Y") %><br>
  <% end %>
</div>


<div>
  <%- if user_signed_in? %>
<h3>You're attending the following events</h3>
    <% @attends.each do |attend| %>
      <% @articles.each do |article| %>
          <%- if article.id == attend.article_id %>
              <%= link_to article.title, article_path(article)%><br>
            <%- end %>
      <% end %>    
    <% end %>
    <%- end %>
</div>